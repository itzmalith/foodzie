<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/vertiback"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OpenScreen" >
    
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotta"
        android:layout_width="246dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginTop="226px"
        android:background="@drawable/circleback"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/fooditems">

    </com.airbnb.lottie.LottieAnimationView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:layout_marginBottom="10px"
        android:orientation="vertical">

        <Button

            android:id="@+id/button22"
            android:layout_width="660px"
            android:layout_height="150px"
            android:layout_gravity="center"
            android:layout_marginTop="90px"
            android:background="@drawable/buttonbackground"
            android:elevation="8dp"
            android:fontFamily="@font/nf_fan"
            android:shadowColor="#000"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="Add Meals to DB"
            android:textSize="46px" />

        <Button
            android:id="@+id/button3"
            android:layout_width="660px"
            android:layout_height="150px"
            android:layout_gravity="center"
            android:layout_marginTop="100px"
            android:background="@drawable/buttonbackground"
            android:elevation="8dp"
            android:fontFamily="@font/nf_fan"
            android:shadowColor="#000"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="Search By Ingredient"
            android:textSize="46px" />

        <Button
            android:id="@+id/button5"
            android:layout_width="660px"
            android:layout_height="150px"
            android:layout_gravity="center"
            android:layout_marginTop="100px"
            android:background="@drawable/buttonbackground"
            android:elevation="8dp"
            android:fontFamily="@font/nf_fan"
            android:shadowColor="#000"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:text="Search saved Meals"
            android:textSize="46px" />

        <Button
            android:id="@+id/button4"
            android:layout_width="660px"
            android:layout_height="150px"
            android:layout_gravity="center"
            android:layout_marginTop="100px"
            android:background="@drawable/buttonbackground"
            android:elevation="8dp"
            android:fontFamily="@font/nf_fan"
            android:shadowColor="#000"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:textSize="46px"
            android:text="Search Meals Online"
             />



    </LinearLayout>

</LinearLayout>